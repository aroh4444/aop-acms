	     	<TextView
	     		style="@style/m_textviewstyle_r" 
	     		android:id="@+id/info_case_method"
	     		/>
	     </TableRow> 
	     
	     <TableRow
	     	android:layout_width="fill_parent" 
	     	android:layout_height="wrap_content" 
	     	>
	     	<TextView 
	     		style="@style/m_textviewstyle" 
	     		android:text="作案特点：" 
	     		/>
	     	<TextView
	     		style="@style/m_textviewstyle_r" 
	     		android:id="@+id/info_case_characters"
	     		/>
	     </TableRow> 
	     
	     <TableRow
	     	android:layout_width="fill_parent" 
	     	android:layout_height="wrap_content" 
	     	>
	     	<TextView 
